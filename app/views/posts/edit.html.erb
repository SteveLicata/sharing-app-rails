<h1>Edit Your Post</h1>

<h2>
  <%= form_for @post do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <br>

    <%= f.label :content %>
    <%= f.text_field :content %>

    <br>

    <%= f.hidden_field :created_at %>

    <br>

    <%= f.label :user %>
    <%= f.collection_select :user_id, User.all, :id, :first_name %>

    <br>

    <%= f.submit %>
  <% end %>
</h2>
