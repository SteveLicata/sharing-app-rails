<div class="container">

  <div class="row postedit">
    <div class="col-sm">
      <h1>
        Edit Your Post
      </h1>
    </div>
  </div>

  <div class="row postedit">
    <div class="col-sm">
      <h2>
        <%= form_for @post do |f| %>
          <%= f.label :title %>
          <br>
          <%= f.text_field :title %>
          <br>
          <%= f.label :content %>
          <br>
          <%= f.text_field :content %>
          <br>
          <%= f.hidden_field :created_at %>
          <%= f.label :user %>
          <br>
          <%= f.collection_select :user_id, User.all, :id, :first_name %>
          <br>
          <%= f.submit %>
        <% end %>
      </h2>
    </div>
  </div>

</div>
