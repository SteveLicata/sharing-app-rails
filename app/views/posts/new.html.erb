<h1>Create New Post</h1>

<h2>
  <%= form_for Post.new do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <br>

    <%= f.label :content %>
    <%= f.text_field :content %>

    <br>

    <%= f.label :user %><br>
    <%= f.collection_select :user_id, User.all, :id, :first_name %>

    <br>

    <%= f.submit %>

  <% end %>
</h2>
